{% extends 'CekurteGeneratorBundle::layout.html.twig' %}

{% set title    = 'Conta'|trans %}
{% set subtitle = 'Edit'|trans %}

{% block links -%}
    {% embed 'CekurteGeneratorBundle:Action:list.html.twig' with {
        'route'      : 'conta'
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:create.html.twig' with {
        'route'      : 'conta_new'
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:delete.html.twig' with {
        'form'       : delete_form,
        'id'         : entity.id,
        'route'      : 'conta_delete',
        'show_label' : true,
    } only %}
    {% endembed %}
{% endblock %}

{% block content -%}
    <form class="form-horizontal" role="form" action="{{ path('conta_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        {% include 'CekurteGeneratorBundle:Action:form-actions.html.twig' %}
    </form>
                            
{% endblock %}

{%- block javascripts -%}
    {{ parent() }}
                            
{%- endblock -%}
