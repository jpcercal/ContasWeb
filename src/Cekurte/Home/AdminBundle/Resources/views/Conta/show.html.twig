{% extends 'CekurteGeneratorBundle::layout.html.twig' %}

{% set title    = 'Conta'|trans %}
{% set subtitle = 'Details'|trans %}

{% block links -%}
    {% embed 'CekurteGeneratorBundle:Action:list.html.twig' with {
        'route'      : 'conta'
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:update.html.twig' with {
        'id'         : entity.id,
        'route'      : 'conta_edit',
        'show_label' : true,
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:create.html.twig' with {
        'route'      : 'conta_new',
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:delete.html.twig' with {
        'form'       : delete_form,
        'id'         : entity.id,
        'route'      : 'conta_delete',
        'show_label' : true,
    } only %}
    {% endembed %}
{% endblock %}

{% block content -%}
    <div class="table-responsive">
        <table class="table table-hover table-show">
            <tbody>
                <tr>
                    <th>{{ 'Id'|trans }}</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'Tipodespesa'|trans }}</th>
                    <td>{{ entity.tipoDespesa }}</td>
                </tr>
                <tr>
                    <th>{{ 'Formapagamento'|trans }}</th>
                    <td>{{ entity.formaPagamento }}</td>
                </tr>
                <tr>
                    <th>{{ 'Conta'|trans }}</th>
                    <td>{{ entity.conta }}</td>
                </tr>
                <tr>
                    <th>{{ 'Valor'|trans }}</th>
                    <td>{{ entity.valor }}</td>
                </tr>
                <tr>
                    <th>{{ 'Data'|trans }}</th><td>{{ entity.data|date('d/m/Y H:i:s') }}</td>
                </tr>
                <tr>
                    <th>{{ 'Sincronizado'|trans }}</th><td>{{ entity.createdAt|date('d/m/Y H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
